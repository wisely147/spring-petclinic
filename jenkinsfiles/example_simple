#!/bin/env groovy

pipeline {
  agent none
  tools { 
     maven 'maven3.5.3' 
    }
  environment {
    IMAGE = "liatrio/petclinic-tomcat"
  }

  stages {
    stage('Testing') {
      agent any
      steps {
        sh 'mvn clean test'
	//sh 'mvn clean findbugs:findbugs package'
      }
    }
    stage('Build') {
      agent any
      steps {
        sh 'mvn package -Dmaven.test.skip=true'
	//sh 'mvn clean findbugs:findbugs package'
      }
    }
    stage('Sonar Scan') {
      agent any
      steps {
         sh 'mvn sonar:sonar -Dsonar.host.url=http://localhost:9000  -Dsonar.login=510fb1436a47a261a3e0dd495f02c6da27861e61'
      }
    }
    stage('Build container') {
      agent any
      steps {
        script {
          if ( env.BRANCH_NAME == 'master' ) {
            pom = readMavenPom file: 'pom.xml'
            TAG = pom.version
          } else {
            TAG = env.BRANCH_NAME
          }
          sh "docker build -t ${env.IMAGE}:${TAG} ."
        }
      }
    }
    stage('Deploy to Dev') {
      agent any
      steps {
        sh 'docker rm -f petclinic-tomcat-temp || true'
        sh "docker run -d -p 9966:8080 --name petclinic-tomcat-temp ${env.IMAGE}:${TAG}"
      }
    }
  }
}
